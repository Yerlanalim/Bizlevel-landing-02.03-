<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="text-2xl font-bold text-primary flex items-center">
        <span class="mr-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
          </svg>
        </span>
        BizLevel
      </a>
      <nav class="hidden md:flex space-x-8">
        <a href="#about" class="text-dark hover:text-primary transition">О нас</a>
        <a href="#how-it-works" class="text-dark hover:text-primary transition">Как это работает</a>
        <a href="#benefits" class="text-dark hover:text-primary transition">Преимущества</a>
        <a href="#testimonials" class="text-dark hover:text-primary transition">Отзывы</a>
        <a href="#faq" class="text-dark hover:text-primary transition">FAQ</a>
      </nav>
      <a href="#cta" class="btn btn-primary hidden md:inline-block">Начать бесплатно</a>
      
      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden text-dark">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white pb-4">
    <div class="container mx-auto px-4 flex flex-col space-y-3">
      <a href="#about" class="text-dark hover:text-primary transition py-2">О нас</a>
      <a href="#how-it-works" class="text-dark hover:text-primary transition py-2">Как это работает</a>
      <a href="#benefits" class="text-dark hover:text-primary transition py-2">Преимущества</a>
      <a href="#testimonials" class="text-dark hover:text-primary transition py-2">Отзывы</a>
      <a href="#faq" class="text-dark hover:text-primary transition py-2">FAQ</a>
      <a href="#cta" class="btn btn-primary text-center">Начать бесплатно</a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>